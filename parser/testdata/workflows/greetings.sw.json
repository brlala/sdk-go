{
  "id": "greeting",
  "version": "1.0",
  "name": "Greeting Workflow",
  "description": "Greet Someone",
  "specVersion": "0.7",
  "start": "Greet",
  "functions": [
    {
      "name": "greetingFunction",
      "operation": "file://myapis/greetingapis.json#greeting"
    }
  ],
  "states": [
    {
      "name": "Greet",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "greetingFunction",
            "arguments": {
              "name": "${ .person | .name }"
            }
          },
          "actionDataFilter": {
            "toStateData": "${ .greeting }"
          }
        }
      ],
      "end": {
        "terminate": true
      }
    }
  ]
}